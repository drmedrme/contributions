<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="hr_web_camera.list">
        <field name="name">hr.employee.web_camera.form</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div class="oe_title" position="after">
                <button name="capture_image" string="Capture"
                        class="fa fa-video-camera" type="object"
                        style="background-color: rgb(182, 187, 191);"/>
            </div>
        </field>
    </record>

</odoo>
